pipeline {
    agent any
    tools {
        maven 'MAVEN3'
        jdk 'Oraclejdk'
        }
    environment {
        registry = '660039689938.dkr.ecr.us-east-1.amazonaws.com/myrepo'
        registryCredential = 'jenkins-ecr-credentials'
        dockerImage = ''
    }
    stages {
        stage('checkout the code') {
            steps {
                git 'https://github.com/EziamaUgonna/simple_application.git'
            }
        }
        stage('build the code') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('sonar quality check') {
            steps {
                script {
                    /* groovylint-disable-next-line NestedBlockDepth */
                    withSonarQubeEnv(credentialsId: 'sonarserver')  {
                        sh 'mvn sonar:sonar '
                    }

                    timeout(time: 1, unit: 'HOURS') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "Pipeline aborted due to quality gate failure: ${qg.status}"
                        }
                    }

                }
            }
        }
        stage('Building image') {
            steps {
                script {
                    dockerImage = docker.build registry + ":$BUILD_NUMBER"
                }
            }
        }
        stage('Deploy image') {
            steps {
                script {
                    docker.withRegistry('https://'+registry,'ecr:us-east-1:'+registryCredential) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
